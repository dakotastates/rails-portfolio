
<h1>Projects</h1>

<table class='table table-bordered table-striped table-hover'>
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Github url</th>
      <th>Video url</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Github', project.github_url %></td>
        <td><%= link_to 'Video', project.video_url %></td>
        <td><%= link_to 'Image', project.image_url %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, class:'btn btn-secondary' %>
