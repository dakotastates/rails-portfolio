<%= form_with(model: project) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">

    <%= f.text_field :title, class:'form-control', placeholder:'Title' %>
  </div>

  <div class="field mb-3">
    <%= f.text_area :description, class:'form-control', placeholder:'Description' %>
  </div>

  <div class="field mb-3">
    <%= f.text_field :github_url, class:'form-control', placeholder:'Github URL' %>
  </div>

  <div class="field mb-3">
    <%= f.text_field :video_url, class:'form-control', placeholder:'Video URL' %>
  </div>

  <div class="field mb-3">
    <%= f.text_field :image_url, class:'form-control', placeholder:'Image URL' %>
  </div>

  <div class="field mb-3">


  <p>Categories</p>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :category) %>
  </div>

  <p>Or Create a New Category...</p>

  <%= f.fields_for :categories do |cat_fields| %>

    <%= render 'category_fields', f: cat_fields %>
    <br/>
    <br/>
  <% end %>

  <br/>
  <br/>
  <%= link_to_add_fields 'Add Category', f, :categories %>

  <br/>
  <br/>

  <div class="actions">
    <%= f.submit class:'btn btn-secondary' %>
  </div>
<% end %>
