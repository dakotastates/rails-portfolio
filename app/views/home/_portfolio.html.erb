<!-- Portfolio Section-->
<!-- <section class="page-section bg-primary text-white" id="portfolio"> -->
<section class="page-section bg-primary portfolio" id="portfolio">
    <div class="container">
        <!-- Portfolio Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Portfolio</h2>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-code"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Portfolio Grid Items-->
        <div class="row justify-content-center">

          <% @projects.each do |project| %>



            <!-- Dynamic Portfolio Item-->
            <div class="col-md-6 col-lg-4 mb-5">
                <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal<%= project.id %>">
                    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                        <div class="portfolio-item-caption-content text-center text-white"><%= project.title %></div>
                    </div>
                    <img class="img-fluid" src=<%= project.image_url %> alt="..." />
                </div>
            </div>

            <!-- Portfolio Modal 1-->
            <div class="portfolio-modal modal fade" id="portfolioModal<%= project.id %>" tabindex="-1" aria-labelledby="portfolioModal<%= project.id %>" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
                        <div class="modal-body text-center pb-5">
                            <div class="container">
                                <div class="row justify-content-center">
                                    <div class="col-lg-8">
                                        <!-- Portfolio Modal - Title-->
                                        <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0"><%= project.title %></h2>
                                        <!-- Icon Divider-->
                                        <div class="divider-custom">
                                            <div class="divider-custom-line"></div>
                                            <div class="divider-custom-icon"><i class="fas fa-code"></i></div>
                                            <div class="divider-custom-line"></div>
                                        </div>
                                        <!-- Portfolio Modal - Image-->
                                          <img class="img-fluid rounded mb-5" src=<%= project.image_url %> alt=<%= project.title %> />
                                        <!-- Portfolio Modal - Text-->
                                        <p class="mb-4"><%= project.description %></p>
                                        <button class="btn btn-primary" href=<%= project.github_url %> data-bs-dismiss="modal">
                                            <i class="fab fa-github"></i>
                                            Github
                                        </button>
                                        <button class="btn btn-primary" href=<%= project.github_url %> data-bs-dismiss="modal">
                                            <i class="fas fa-play"></i>
                                            Demo
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

          <% end %>


            <!-- Portfolio Item 1-->
            <!-- <div class="col-md-6 col-lg-4 mb-5">
                <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal1">
                    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                        <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                    </div>
                    <img class="img-fluid" src="startbootstrap-freelancer-gh-pages/assets/img/portfolio/cabin.png" alt="..." />
                </div>
            </div> -->

        </div>
    </div>
</section>
