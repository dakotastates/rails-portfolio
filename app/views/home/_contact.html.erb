<!-- Contact Section-->
<section class="page-section" id="contact">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Contact Me</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-code"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Contact Section Form-->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">

          <%= form_tag(send_mail_path, remote: true) do %>
            <div class="form-floating mb-3">
              <%= text_field_tag 'name', nil, :required => true, class: 'form-control', placeholder: 'Enter your name...' %>
              <%= label_tag 'name', 'Full Name' %>
            </div>
             <div class="form-floating mb-3">
               <%= email_field_tag 'email', nil, :required => true, class: 'form-control', placeholder: 'Your Email Address' %>
               <%= label_tag 'email', 'Email' %>
             </div>
             <div class="form-floating mb-3">
               <%= telephone_field_tag 'phone', nil, class: 'form-control', placeholder: 'Your Phone Number' %>
               <%= label_tag 'phone', 'Phone' %>
             </div>
             <div class="form-floating mb-3">
               <%= text_area_tag 'message', nil, :required => true, class: 'form-control text-area-style', rows: 4, placeholder: 'Message' %>
               <%= label_tag 'message', 'Message' %>
             </div>
               <%= submit_tag nil, class: 'btn btn-primary btn-xl ' %>

               <div id="submitSuccessMessage">
                   <div class="text-center mb-3">
                       <div class="fw-bolder"><%=flash[:notice]%></div>
                   </div>
               </div>

            <% end %>

            </div>
        </div>
    </div>
</section>
